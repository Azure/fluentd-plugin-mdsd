#!/bin/sh
set -e

case "$1" in
    configure)
    chown omsagent:root /opt/microsoft/omsagent/plugin/out_mdm.rb
    chown omsagent:root /opt/microsoft/omsagent/plugin/libifxext.so
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
